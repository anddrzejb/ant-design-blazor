<div>
    <h4>marks</h4>
    <MultiRangeSlider Marks="@_marks.ToArray()" Style="margin-bottom: 38px;">
        <RangeItem DefaultValue="(65, 90)"/>
    </MultiRangeSlider>
    <br/>
    <h4>marks & step</h4>
    <MultiRangeSlider Marks="@_marks.ToArray()" Step="4" AllowOverlapping Style="margin-bottom: 38px;">
        <RangeItem DefaultValue="(0, 40)"/>
        <RangeItem DefaultValue="(45, 60)"/>
        <RangeItem DefaultValue="(65, 100)"/>
    </MultiRangeSlider>
    <br/>
    <h4>marks & step=null</h4>
    <MultiRangeSlider Marks="@_marks.ToArray()" Step="null" AllowOverlapping>
        <RangeItem DefaultValue="(0, 40)"/>
        <RangeItem DefaultValue="(35, 60)"/>
        <RangeItem DefaultValue="(65, 100)"/>
    </MultiRangeSlider>
</div>

@code {
    private List<RangeItemMark> _marks;

    protected override void OnInitialized()
    {
        _marks = new() { new RangeItemMark(0, @<strong>Start</strong>, "color: green;") };
        _marks.AddRange(Enumerable.Range(1, 9).Select(n => new RangeItemMark(n * 10, (n * 10).ToString())).ToList());
        _marks.Add(new RangeItemMark(100, (b) =>
        {
            b.OpenElement(0, "strong");
            b.AddContent(1, "100℃");
            b.CloseElement();
            }, "color: #f50;"));

    }
}
